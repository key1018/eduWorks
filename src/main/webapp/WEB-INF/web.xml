<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<!-- 
		* web.xml
		- 서버 스타트와 동시에 제일 먼저 읽혀지는 문서
		- 서버 스타트와 동시에 초기에 읽어(pre-loading)야되는 문서(xml)들을 등록
	 -->

	
	<!-- 
		* contextConfigLocation
		  가장 먼저 로딩 되어야하는 xml문서의 경로를 등록하는 영역
	 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/spring/root-context.xml
			/WEB-INF/spring/spring-security.xml
		</param-value>
	</context-param>
	
	<!--  
		* ContextLoaderListener
		  가장 먼저 로딩(pre-loading) 되어야 하는 xml문서를 읽기 위한 클래스
	 -->
	<listener><!-- spring이 붙어있으면 spring에서 별도로 제공하는 클래스구나. 하면 됨 -->
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	
	<!-- 
		* DispatcherServlet
		  사용자의 요청을 받아주는 용도의 객체 (어떤 url로 요청하든 간에 얘가 다 받아줌)
	 -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				/WEB-INF/spring/appServlet/servlet-context.xml
				/WEB-INF/spring/appServlet/ws-config.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>
		
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- * 스프링에서 제공하는 인코딩 필터 등록 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	

</web-app>
